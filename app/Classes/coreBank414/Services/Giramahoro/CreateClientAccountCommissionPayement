<?php

namespace App\Classes\CoreBank414\Services\Giramahoro;

class GiramahoroMobiCashServicePayment
{
    protected string $baseUrl;
    protected array $headers;

    public function __construct()
    {
        $this->baseUrl = 'https://testbox.mobicash.rw/CoreBank/test_box/api/';
        $this->headers = [
            'Content-Type: application/json',
            'Authorization: Basic dXNlcjE6MDAwMA==',
        ];
    }

    /**
     * Send a POST request using cURL
     *
     * @param string $endpoint
     * @param array $data
     * @return array|null
     */
    public function post(string $endpoint, array $data): ?array
    {
        $url = $this->baseUrl . $endpoint;

        $ch = curl_init();
        curl_setopt($ch, CURLOPT_URL, $url);
        curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
        curl_setopt($ch, CURLOPT_POST, true);
        curl_setopt($ch, CURLOPT_HTTPHEADER, $this->formatHeaders());
        curl_setopt($ch, CURLOPT_POSTFIELDS, json_encode($data));

        $response = curl_exec($ch);
        $httpCode = curl_getinfo($ch, CURLINFO_HTTP_CODE);

        curl_close($ch);

        if ($httpCode >= 200 && $httpCode < 300) {
            return json_decode($response, true);
        }

        Log the error for debugging
        \Log::error('MobiCash API Error', [
            'status' => $httpCode,
            'response' => $response,
        ]);

        return null;
    }

    /**
     * Format headers for cURL
     *
     * @return array
     */
    protected function formatHeaders(): array
    {
        $formattedHeaders = [];
        foreach ($this->headers as $key => $value) {
            $formattedHeaders[] = "$key: $value";
        }

        return $formattedHeaders;
    }
}
